<h1>Log in!</h1>

<%= form_tag restaurants_path do %>
	<div class="field">
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</div>
	<div class"actions"><%= submit_tag "Log in" %></div>
<% end %>






    <p class="userinfo">
     	<% if current_user %>
    		Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
     	<% else %>
    		<strong>
    			<%= link_to "Customer Sign up here", new_customer_path %>
    		<br />
    			<%= link_to "Owner Sign up here", new_owner_path %>
    		</strong>
    	<% end %>
    </p>